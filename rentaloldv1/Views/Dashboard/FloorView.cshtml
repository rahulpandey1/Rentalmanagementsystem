@{
    ViewData["Title"] = "Floor View";
    var floorData = ViewBag.FloorData;
}

<div class="row">
    <div class="col-12">
        <h1><i class="fas fa-layer-group"></i> Floor View - Room Layout</h1>
        <p class="lead">Visual overview of all 22 rooms across 3 floors</p>
    </div>
</div>

<!-- Second Floor -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5><i class="fas fa-building"></i> Second Floor - Rooms F2-01 to F2-06 (6 rooms)</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var room in floorData.SecondFloor)
                    {
                        var activeAgreement = room.RentAgreements.FirstOrDefault();
                        var isOccupied = activeAgreement != null;
                        var cardClass = isOccupied ? "border-danger" : "border-success";
                        var statusClass = isOccupied ? "bg-danger" : "bg-success";
                        var statusText = isOccupied ? "Occupied" : "Available";
                        var tenantName = activeAgreement?.Tenant?.FullName ?? "No Tenant";
                        
                        <div class="col-md-2 mb-3">
                            <div class="card @cardClass">
                                <div class="card-header @statusClass text-white p-2">
                                    <h6 class="mb-0">@room.RoomNumber</h6>
                                    <small>@statusText</small>
                                </div>
                                <div class="card-body p-2">
                                    <p class="mb-1"><strong>$@room.MonthlyRent.ToString("N0")</strong></p>
                                    <p class="mb-1 small">@room.Area sq ft</p>
                                    @if (isOccupied)
                                    {
                                        <p class="mb-0 small text-muted">@tenantName</p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 small text-success">Ready to rent</p>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

