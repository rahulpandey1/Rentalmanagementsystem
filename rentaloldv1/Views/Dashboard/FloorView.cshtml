<!-- Summary Statistics -->
@{
    var totalAvailable = 0;
    var totalOccupied = 0;
    foreach (var room in floorData.GroundFloor)
    {
        if (room.IsAvailable) totalAvailable++; else totalOccupied++;
    }
    foreach (var room in floorData.FirstFloor)
    {
        if (room.IsAvailable) totalAvailable++; else totalOccupied++;
    }
    foreach (var room in floorData.SecondFloor)
    {
        if (room.IsAvailable) totalAvailable++; else totalOccupied++;
    }
    var occupancyRate = ((double)totalOccupied / 22 * 100).ToString("F1");
}

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h4 class="text-success">@totalAvailable</h4>
                <p class="mb-0">Total Available Rooms</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h4 class="text-danger">@totalOccupied</h4>
                <p class="mb-0">Total Occupied Rooms</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body text-center">
                <h4 class="text-primary">@occupancyRate%</h4>
                <p class="mb-0">Occupancy Rate</p>
            </div>
        </div>
    </div>
</div>